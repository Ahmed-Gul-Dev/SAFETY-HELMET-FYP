<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AreaRisk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AreaRisk">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/risk" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:gravity="center"
            android:padding="12dp"
            android:text="Check Area Risk"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textAlignment="center"
            android:text="Stay informed and stay safe.Check any area's risk before you ride to assess potential hazards and ensure a smooth journey."
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagline"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Enter Location"
            android:textColor="@color/pink"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/text1"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Select Location"
            android:padding="8dp"
            android:textAllCaps="true"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_email"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Enter Time 24"
            android:textColor="@color/pink"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/text2"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Select Time 24-Hour Format"
            android:padding="8dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/pink"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_below="@id/password"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/warning" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:gravity="center"
            android:padding="12dp"
            android:text="Risk Level: "
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/risklevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title2"
            android:gravity="center"
            android:text="low !"
            android:textAllCaps="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/red"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/risklevel"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:backgroundTint="@color/ecc_color"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="22sp" />







    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>