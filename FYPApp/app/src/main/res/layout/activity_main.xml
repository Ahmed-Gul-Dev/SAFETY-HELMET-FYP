<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="SAFETY SPHERE"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:gravity="center"
            android:text="Guarding your World , One Head at a Time"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@id/tagline"
            android:layout_marginBottom="20dp"
            android:src="@drawable/helmetloginpage" />

        <Button
            android:id="@+id/loginBtnMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/imageView1"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <Button
            android:id="@+id/SignUpBtnMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/loginBtnMain"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/purple"
            android:text="Signup"
            android:textAllCaps="false"
            android:textSize="22sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>